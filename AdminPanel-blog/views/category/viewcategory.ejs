<%- include('../layouts/header') %>


<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Navigation Links -->
        <div class="btn-group">
            <a href="/Blogs/viewblogs" class="btn btn-primary">View Blogs</a>
            <a href="/Blogs" class="btn btn-secondary">Add Blogs</a>
            <a href="/" class="btn btn-success">Add Category</a>
        </div>
        <!-- Search Form -->
        <form action="/Blogs/viewBlogs" method="get" class="d-flex">
            <input type="search" name="searchBlogs" class="form-control me-2" placeholder="Search Blogs">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>
    </div>
    <!-- Heading -->
    <h2 class="text-center mb-4">Existing Categories</h2>
    <!-- Categories Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Category Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.categoryName %></td>
                        <td>
                            <a href="/categoryDelete/<%= category.id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="2" class="text-center">No categories found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../layouts/footer') %>