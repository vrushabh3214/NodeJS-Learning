<%-include('header') %>
    <!--begin::App Main-->
    <main class="app-main">
        <!--begin::App Content Header-->
        <div class="app-content-header">
            <!--begin::Container-->
            <div class="container-fluid">
                <!--begin::Row-->
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="mb-0">Add Admin Details</h3>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-end">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Admin Details</li>
                        </ol>
                    </div>
                </div>
                <!--end::Row-->
            </div>
            <!--end::Container-->
        </div>
        <!--end::App Content Header-->
        <!--begin::App Content-->
        <div class="app-content">
            <!--begin::Container-->
            <div class="container-fluid">
                <!--begin::Row-->
                <div class="row g-4 justify-content-center">
                    <!--begin::Col-->
                    <div class="col-md-6">
                        <!--begin::Quick Example-->
                        <div class="card card-primary card-outline mb-4 ">
                            <!--begin::Form-->
                            <form method="post" action="/editAdmin" enctype="multipart/form-data">
                                <!--begin::Body-->
                                <div class="card-body">
                                    <!--begin::Col-->
                                    <div class="mb-3">
                                        <label for="validationCustom01" class="form-label fw-bold">First name :</label>
                                        <input type="text" class="form-control" id="validationCustom01"
                                            placeholder="First Name" name="fname" value="<%= SingleObj ? SingleObj.fname : '' %>" />
                                    </div>
                                    <!--end::Col-->
                                    <!--begin::Col-->
                                    <div class="mb-3">
                                        <label for="validationCustom02" class="form-label fw-bold">Last name :</label>
                                        <input type="text" class="form-control" id="validationCustom02"
                                            placeholder="Last Name" name="lname"  value="<%= SingleObj ? SingleObj.lname : '' %>" />
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label fw-bold">Email address :</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Email"
                                            aria-describedby="emailHelp"  value="<%= SingleObj ? SingleObj.email : '' %>" />
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputPassword1" class="form-label fw-bold">Password :</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                                            name="password"  value="<%= SingleObj ? SingleObj.password : '' %>"" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="col-form-label fw-bold col-sm-2 pt-0">Gender :</label>
                                        <div class="col-sm-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="gridRadios1" value="Male" <% if(SingleObj.gender=='Male') {%><%= 'checked' %> <% } %> />
                                                <label class="form-check-label" for="gridRadios1"> Male</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="gridRadios2" value="Female" <% if(SingleObj.gender=='Female') {%><%= 'checked' %> <% } %> />
                                                <label class="form-check-label" for="gridRadios2"> Female</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="col-form-label fw-bold col-sm-2 pt-0">Hobby :</label>
                                        <div class="col-sm-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="hobby"
                                                    id="hobbyReading" value="Reading" <% if (SingleObj.hobby.includes('Reading')) { %>checked<% } %> />
                                                <label class="form-check-label" for="hobbyReading">Reading</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="hobby"
                                                    id="hobbyDancing" value="Dancing" <% if (SingleObj.hobby.includes('Dancing')) { %>checked<% } %> />
                                                <label class="form-check-label" for="hobbyDancing">Dancing</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="hobby"
                                                    id="hobbySinging" value="Singing" <% if (SingleObj.hobby.includes('Singing')) { %>checked<% } %> />
                                                <label class="form-check-label" for="hobbySinging">Singing</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="hobby"
                                                    id="hobbyCricket" value="Cricket" <% if (SingleObj.hobby.includes('Cricket')) { %>checked<% } %> />
                                                <label class="form-check-label" for="hobbyCricket">Cricket</label>
                                            </div>
                                            <!-- Add similar for Singing and Cricket -->
                                        </div>
                                    </div>
                                    
                                    <% var cityNames=['Ahmedabad','Bharuch','Chandigarh','Damnagar','Vadodara','Rajkot','Surat','Vapi'] %>
                                    <div class="mb-3">
                                        <label for="exampleInputPassword1" class="form-label fw-bold">City :</label>
                                        <select name="city">
                                            <option value="">--Select City--</option>
                                            <% cityNames.map((v,i)=>{ %>
                                                <option value="<%= v %>" <% if (SingleObj.city === v) { %>selected<% } %>><%= v %></option>

                                            <% }) %>
                                        </select>
                                    </div>
                                    <div class="input-group mb-3">
                                        <input type="file" class="form-control" name="image" id="inputGroupFile02" />
                                        <label class="input-group-text fw-bold" for="inputGroupFile02">Upload</label>
                                        <img src="<%= SingleObj.image%>" width="100" height="100" alt="">
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text fw-bold">Mesaage :</span>
                                        <textarea class="form-control" name="message"
                                            aria-label="With textarea"><%= SingleObj.message%></textarea>
                                    </div>
                                </div>
                                <!--end::Body-->
                                <!--begin::Footer-->
                                <div class="card-footer">
                                    <a href=""><button type="submit" value="update" class="btn btn-primary">Submit</button></a>
                                </div>
                                <!--end::Footer-->
                            </form>

                            
                            <!--end::Form-->
                        </div>
                    </div>
                    <!--end::Input Group-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </main>
    <!--end::App Main-->

    <%- include('footer') %>